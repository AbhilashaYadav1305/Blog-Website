<%- include("partials/header"); -%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>

  <% posts.forEach(function(post) { %>

      <h1><%= post.title %></h1>
      <% var content = post.content; %>
      <%  if (content.length > 100) { %>
        <p>
          <%= content.substring(0, 100) + "..."  %>
          <a href="/posts/<%= post.title %>">Read more</a>
        </p>

      <% } else { %>

        <p>
          <%= post.content %>
        </p>

      <%  } %>
  <% }); %>

<%- include("partials/footer"); -%>
